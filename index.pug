        button(id="goTop" onclick="goTop()" class="goTop fas fa-arrow-up")

        script.
                window.onscroll = function() {myFunction()};

                function myFunction() {
                if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
                    document.getElementById("navbar").className = "navbar navbar-move";
                    document.getElementById("goTop").className  = "goTop fas fa-arrow-up active";
                } else {
                    document.getElementById("navbar").className = "navbar";
                    document.getElementById("goTop").className  = "goTop fas fa-arrow-up";
                }
                }
                
                //---------------------------------------------------------------------------------//

                const span = document.getElementById('copy');

                span.onclick = function() {
                document.execCommand("copy");
                document.getElementById("done").classList.add("copied");
                setTimeout(() => {
                    document.getElementById("done").classList.remove("copied");
                }, 1000);
                }

                span.addEventListener("copy", function(event) {
                    event.preventDefault();
                    if (event.clipboardData) {
                        event.clipboardData.setData("text/plain", "king_ultron99#0647");
                        console.log(event.clipboardData.getData("text"))
                    }
                });

                //---------------------------------------------------------------------------------//
                
                let intro = document.querySelector('.intro')

                function isMobile () {
                    if( navigator.userAgent.match(/iphone/i) ||
                    navigator.userAgent.match(/ipad/i) ||
                    navigator.userAgent.match(/android/i) ||
                    navigator.userAgent.match(/blackberry/i) ||
                    navigator.userAgent.match(/android/i)
                    ) {
                        return true;
                    }
                    return false;
                }

                if( isMobile() === true) {
                    intro.removeAttribute("id");
                } else {
                    intro.setAttribute("id", "intro");
                }

                //---------------------------------------------------------------------------------//

                function goTop () {
                    window.scrollTo(0,0);
                }

                let menuToggle  = document.querySelector('.menu-toggler');

                menuToggle.addEventListener("click", function() {
                    menuToggle.classList.toggle("active");
                    document.getElementById("navbar-menu").classList.toggle("active");
                })

                function hidesidebar () {
                    menuToggle.classList.remove("active");
                    document.getElementById("navbar-menu").classList.remove("active");
                } 


